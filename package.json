{
  "name": "rage-mp-server-controller-by-caballero",
  "displayName": "Rage MP Server Controller",
  "description": "This will help you to start/stop/reboot your local server!",
  "version": "0.0.3",
  "publisher": "Caballero",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rage-mp-server-controller-by-caballero.startServer",
    "onCommand:rage-mp-server-controller-by-caballero.stopServer",
    "onCommand:rage-mp-server-controller-by-caballero.restartServer"
  ],
  "main": "./extension.js",
  "contributes": {
    "galleryBanner": {
      "theme": "dark",
      "path": "./banner.png"
    },
    "configuration": {
      "type": "object",
      "title": "Rage MP Server Controller",
      "properties": {
        "ragemp.serverPath": {
          "type": "string",
          "default": "C:\\RAGEMP\\server-files\\ragemp-server.exe",
          "description": "Path to the Rage MP server executable."
        }
      }
    },
    "commands": [
      {
        "command": "rage-mp-server-controller-by-caballero.startServer",
        "title": "Start Server"
      },
      {
        "command": "rage-mp-server-controller-by-caballero.stopServer",
        "title": "Stop Server"
      },
      {
        "command": "rage-mp-server-controller-by-caballero.restartServer",
        "title": "Restart Server"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sashasync/Rage-MP-Server-Controller.git"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "eslint": "^9.11.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
